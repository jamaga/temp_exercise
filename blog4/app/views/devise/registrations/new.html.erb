<h2>Sign up</h2>

<div class="row">
  <div class="col-xs-6">

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>

    <div class="form-group">
      <%= f.text_field :email, class: 'form-control', placeholder: 'your email' %>
    </div>
    <div class="form-group">
      <%= f.text_field :password, class: 'form-control', placeholder: 'password' %>
    </div>
    <div class="form-group">
      <%= f.text_area :password_confirmation, class: 'form-control', placeholder: 'password confirmation' %>
    </div>
    <div class="actions">
      <button class="btn btn-info" type="submit">Sign up</button>
    </div>
        </div>
      </div>

<% end %>
