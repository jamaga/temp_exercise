<!DOCTYPE html>
<html>
<head>
  <title>Blog4</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= stylesheet_link_tag    "https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css", :media => "all" %>
  <%= csrf_meta_tags %>
</head>
<body>
<%= render 'layouts/menu' %>
<div class="container">
  <% flash.each do |level, message| %>
    <div class="alert <%= flash_css_class(level.to_sym) %>">
      <%= message %>
    </div>
  <% end %>
  <%= yield %>
</div>
<%= javascript_include_tag "application" %>
</body>
</html>
