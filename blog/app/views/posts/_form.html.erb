<div class="row">
  <div class="col-md-6">

  <%= form_for @post, html: { multipart: true } do |f|  %>
    <% if @post.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@post.errors.count, "error") %> prohibited this post from being saved:</h2>

        <ul>
        <% @post.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <p>wklej sobie obrazek:</p>
    <div class="form-group">
      <% if @post.avatar? %>

        <%= link_to @post.avatar.url, :target => '_blank' do %>
          <%= image_tag @post.avatar.url(:thumb) %>
        <% end %>
        <br>
        <%= f.label :remove_avatar do %>

          <%= f.check_box :remove_avatar %>
          remove avatar bla vla
        <% end %>
      <% end %>
      <br>
      <%= f.file_field :avatar %>
    </div>

    <div class="form-group">
      <%= f.label :title %>
      <%= f.text_field :title, class: 'form-control', placeholder: 'Tytul'  %>
    </div>
    <div class="form-group">
      <%= f.label :body %>
      <%= f.text_area :body, rows: 3, class: 'form-control', placeholder: 'Tresc' %>
    </div>
      <%= f.submit "Save", class: 'btn btn-default' %>
  <% end %>
  </div>
</div>
