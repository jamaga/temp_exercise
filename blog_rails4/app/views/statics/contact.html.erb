    <h1 class="text-center">Contact</h1>
    <div class="alert alert-info">
    <% if flash[:notice] %>
      <p><%= flash[:notice] %></p>
        </div>
    <% end %>

      <div class="row">
        <div class="col-xs-6">


        <%= form_for @contact, url: statics_contact_path do |f| %>
      <% if @contact.errors.any? %>
        <div id="error_explanation">
          <ul>
            <% @contact.errors.full_messages.each do |msg| %>
              <div class="alert alert-danger">
              <div id='notify_message'> <%= msg %></div>
                </div>
          <% end %>
          </ul>
        </div>
      <% end %>


      <div class="form-group">
        <%= f.text_field :author, class: 'form-control', placeholder: 'your name/email' %>
      </div>
      <div class="form-group">
        <%= f.text_field :subject, class: 'form-control', placeholder: 'subject of the comment' %>
      </div>
      <div class="form-group">
        <%= f.text_area :body, class: 'form-control', placeholder: 'leave your comment here', rows: 3 %>
      </div>
      <div class="actions">
        <button class="btn btn-info" type="submit">Create Contact</button>
      </div>
      </div>


      <%#= f.submit  "Add Contact", class: "btn btn-info"%>
<% end %>
